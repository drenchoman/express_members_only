<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link href="/styles/globals.css" rel="stylesheet" type="text/css">
    <link href="/styles/index.css" rel="stylesheet" type="text/css">
    <link href="/styles/animation.css" rel="stylesheet" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Homepage</title>
  </head>
  <body>
    <nav class='nav homeWrap'>
        <a class='homea' href="/">
          <img class='home filterGreen' src='/images/home.svg' />
        </a>
        <a class='headerGit' href='https://github.com/drenchoman'>
          <img class='filterWhite' src='/images/github.svg' />
          <span>Drenchoman</span>
        </a>
      </nav>
    <div class='wrapper'>
      <div class='indexHeader animateFade delay-1'>
        <h1 class='blink'>Hacker Club</h1>
      </div>
      <div class='welcome animateFade'>
        <h2 class='welcomeMessage'>Register or log in to make a post.</h2>
      </div>
        <div class='loginOptions animateFade delay-2'>
          <button class='fancyButton'>
            <a href="/login">Login</a>
          </button>
          <button class='fancyButton'>
            <a href="/register">Register</a>
          </button>
        </div>


      <% if(locals.messages){ %>
        <% messages.forEach(function(message) { %>
        <div class='cardWrapper animateFade delay-3'>
          <div class='cardTop'>
            <div class='cardImage'>
              <img class='filterGreen' src='images/face.svg'/>
            </div>
            <div class='cardAuthor'>
              <span>Anonymous</span>
            </div>

          </div>

          <div class='cardBottom'>
            <div class='cardContent'>
              <div class='cardHeader'>
                <h3><%= message.title %></h3>
              </div>
              <div class='cardText'>
                <p>
                  <%= message.message %>
                </p>
              </div>

            </div>
            <div class='cardDate'>
              <span>XX:XX</span>
              <span>XX XXXXX XXXX</span>
            </div>

          </div>


          </div>

          <% if(message.replies){  %>
            <% for (var i=0; i < message.replies.length; i++ ){ %>
              <div class='cardWrapper reply fadeIn'>
                <div class='cardTop replyTop'>
                  <div class='cardImage'>
                    <img class='filterGreen' src='images/face.svg'/>
                  </div>
                  <div class='cardAuthor'>
                    <span>Anonymous</span>
                  </div>
                </div>
                <div class='cardBottom'>
                  <div class='cardContent replyContent'>
                    <div class='cardText'>
                      <p>
                        XXX XXXX XXX XX
                      </p>
                    </div>
                  </div>
                <div class='cardDate'>
                  <span>XX:XX</span>
                  <span>XX XXXXX XXXX</span>
                  </div>
              </div>
            </div>

          <% }} %>




      <% }) } %>
      <div class='hackerAnimation'>
        <span class='number'>1</span>
        <span class='number2'>0</span>
        <span class='number3'>1</span>
        <span class='number4'>0</span>
        <span class='number5'>1</span>
      </div>
        </div>
        <footer class='footer'>
          <span class='quote'>Hackers often describe what they do as playfully creative problem solving.</span>
          <a class='footerGit' href='https://github.com/drenchoman'>
            <img class='filterWhite' src='/images/github.svg' />
            <span>Drenchoman</span>
          </a>
        </footer>

  </body>
</html>
